{
  "name": "peak-planner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.94",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "antd": "^5.16.1",
    "json-server": "^1.0.0-alpha.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.2",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.8",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "cypress": "^13.7.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "handlebars": "^4.7.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "plop": "^4.0.1",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:server": "json-server --watch src/db/db.json --port 3001",
    "build": "react-scripts build",
    "test:unit": "react-scripts test",
    "test:e2e": "cypress open",
    "lint": "eslint src/**/*.ts dev-utils/**/*.js",
    "format": "eslint --fix src/*.{ts,tsx} src/**/*.{ts,tsx} dev-utils/**/*.js src/**/*.spec.ts src/**/*.hooks.ts",
    "pretty": "prettier --write src/**/*.{ts,tsx}",
    "precommit": "lint-staged",
    "prepare": "husky",
    "plop": "plop --plopfile 'dev-utils/plop/plopfile.js'"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run pretty",
      "npm run lint"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "type": "module"
}
